---
import { Icon } from 'astro-icon/components'
import { tagNameSlugify } from '@Utils/tagUtils'

const { tag } = Astro.props
const largeTagFrequency: boolean = tag.frequecny >= 100
---

<a href=`/tags/${tagNameSlugify(tag.name)}` class="tagCard group">
	<Icon name="material-symbols:tag-rounded" size={25} />
	<span>{tag.name}</span>
	<span
		class:list={[
			'ml-0.75 flex h-8 items-center justify-center rounded-lg bg-gray-200/75 dark:bg-gray-200/20',
			{ 'w-10': largeTagFrequency, 'w-8': !largeTagFrequency },
		]}>{tag.frequency}</span
	>
</a>
